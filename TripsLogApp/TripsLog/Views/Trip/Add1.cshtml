@model TripViewModel
<h1>Welcome to Add 1</h1>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Add" method="post">
    <input type="hidden" asp-for="PageNumber" />
    <div class="mb-2">
        <label asp-for="Trip.Destination" class="form-label">Destination</label>
        <input asp-for="Trip.Destination" class="form-control" />
    </div>
    <div class="mb-2">
        <label asp-for="Trip.Accomodation" class="form-label">Accomodations</label>
        <input asp-for="Trip.Accomodation" class="form-control" />
    </div>
    <div class="mb-2">
        <label asp-for="Trip.StartDate" class="form-label">StartDate</label>
        <input asp-for="Trip.StartDate" class="form-control" />
    </div>
    <div class="mb-2">
        <label asp-for="Trip.EndDate" class="form-label">End Date</label>
        <input asp-for="Trip.EndDate" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Next</button>
</form>